<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:id="@+id/listHolder" android:padding="3dp"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:layout_width="wrap_content" android:elevation="3dp"
        android:layout_height="wrap_content" android:id="@+id/messageHolder"
        android:background="@drawable/conversation_message"
        android:layout_marginRight="60dp" android:alpha="0.71">

        <github.ankushsachdeva.emojicon.EmojiconTextView
            android:id="@+id/conversationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="12dp" android:layout_marginLeft="3dp" />
    </RelativeLayout>
</RelativeLayout>