<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/eventContainer">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical" android:id="@+id/magicContainer"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical" android:id="@+id/eventTitleHolder"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp" android:background="#BD043E" android:elevation="3dp"
                    android:padding="5dp" android:gravity="center_vertical"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most popular events"
                    android:id="@+id/eventBarTitle" android:layout_alignParentLeft="true"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/eventListId"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone"/>

        <ListView android:layout_width="fill_parent" android:layout_height="380dp"
                  android:id="@+id/events" android:layout_marginTop="40dp"
                  android:divider="#000000" android:dividerHeight="1dp" />
    </RelativeLayout>



    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical" android:id="@+id/superClick"
                 android:layout_width="fill_parent" android:layout_marginTop="40dp"
                 android:layout_height="380dp" android:background="@color/transparent"></FrameLayout>
</RelativeLayout>