<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/listHolder" android:padding="3dp"
                android:paddingBottom="0dp">

    <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/messageHolder"
            android:background="@drawable/conversation_message_me" android:layout_alignParentRight="true"
            android:layout_marginRight="1.5dp" android:layout_marginLeft="100dp" >

        <github.ankushsachdeva.emojicon.EmojiconTextView
            android:id="@+id/conversationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="12dp" />
    </RelativeLayout>

